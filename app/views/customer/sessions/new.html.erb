<div class="container">
    <h2 class="row d-flex justify-content-center p-3">
      ログイン
    </h2>

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="row d-flex justify-content-center">
        <div class="col-2">
          <%= f.label :email, "メールアドレス" %><br />
        </div>
        <div class="col-2">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
      <br>
      <div class="row d-flex justify-content-center">
        <div class="col-2">
          <%= f.label :password, "パスワード" %><br />
        </div>
        <div class="col-2">
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>
      <br>
      <div class="row d-flex justify-content-center">
      <% if devise_mapping.rememberable? %>
        <div class="col-1"></div>
        <div class="col-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      </div>
      <br>
      <div class="row d-flex justify-content-center">
        <div class="col-1">
          <%= f.submit "ログイン", class:"btn btn-success" %>
        </div>
      </div>
    <% end %>
  <div class="row d-flex justify-content-center">
    <div class="col-3">
      <%= render "customer/shared//links" %>
    </div>
  </div>
</div>