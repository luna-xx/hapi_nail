インスタ風マイページ

<!--ユーザーがサインインの場合-->
<% if user_signed_in? && @user == current_user %>
  <!--ユーザーの詳細-->
  <div class="d-flex justify-content-center">
    <h4><%= @user.name %></h4>
    <%= image_tag @user.get_top_image(100,100) %>
    <% if @user.id == current_user.id %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user), class: "btn-sm btn-success" %></p>
    <% end %>
  </div>
<% end %>
 
 <!-- ユーザーの投稿一覧 -->
<% @post.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image %>
    <% end %>
    <p>ユーザーネーム：<%= post.user.name %></p>
    <p>投稿ユーザー画像：<%= image_tag post.user.get_top_image(100,100) %></p>
    <p>投稿内容：<%= post.introduction %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>  
  </div>
<% end %>