<!--投稿詳細-->
 <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>

<p>ユーザーネーム：<%= post.user.name %></p>

<h2>画像</h2>
<%= link_to image_tag post.image, post_path(post.id), size: "300x300" %>

<h2>タイトル</h2>
<p><%= @post.title %></p>

<h2>本文</h2>
<p><%= @post.text %></p>

<p><%= @post.created_at.strftime('%Y/%m/%d') %></p>

<% if @post.user == current_user %>
  <%= link_to "編集", edit_post_path(@post.id) %>
  <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>