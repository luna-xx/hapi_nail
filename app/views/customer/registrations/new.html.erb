<div class="container">
  <div class="d-flex justify-content-center">
    <h2 class="d-inline-block border p-3 my-3">
      新規会員登録
    </h2>
  </div>

    <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "customer/shared//error_messages", resource: resource %>

    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.label :name, "名前" %>
      </div>
      <div class="col-2">
        <%= f.text_field :name %>
      </div>
    </div>
    <br>
    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.label :nick_name, "ニックネーム" %>
      </div>
      <div class="col-2">
        <%= f.text_field :nick_name %>
      </div>
    </div>
    <br>
    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.label :furigana_name, "フリガナ" %>
      </div>
      <div class="col-2">
        <%= f.text_field :furigana_name %>
      </div>
    </div>
    <br>
    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.label :sex, "性別" %>
      </div>
      <div class="col-2">
        <%= f.radio_button :sex, "male" %><%= f.label :sex, '男性', value: :male %>
        <%= f.radio_button :sex, "female" %><%= f.label :sex, '女性', value: :female %>
      </div>
    </div>
    <br>
    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.label :email, "メールアドレス" %><br />
      </div>
      <div class="col-2">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <br>
    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
      </div>
      <div class="col-2">
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>
    <br>
    <div class="row d-flex justify-content-center">
      <div class="col-2">
        <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
      </div>
      <div class="col-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>
    <br><br>
    <div class="row d-flex justify-content-center">
      <div class="col-1">
        <%= f.submit "新規登録", class:"btn btn-success" %>
      </div>
    </div>
    <% end %>
    <br>
    <div class="row d-flex justify-content-center">
      <div class="col-1"></div>
      <h5 class="col-3">登録済みの方は<%= render "customer/shared//links" %></h5>
    </div>

</div>
