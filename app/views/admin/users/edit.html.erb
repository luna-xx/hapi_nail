<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-center">
        <h2 class="d-inline-block border p-3 my-3">
          <%= @user.name %>さんの会員情報編集
        </h2>
      </div>
      
      <div class="d-flex justify-content-center">
        <div class="d-inline-block p-3 my-3">
          <table class="table table-borderless">
            <%= form_with model: [:admin, @user] do |f| %>
            
            <!--<tr>-->
            <!--  <td>プロフィール画像</td>-->
            <!--</tr>-->
            
            <!--<tr>-->
            <!--  <td><%= image_tag @user.get_top_image_url(100, 100), size: '100x100', fallback: "no_image.jpg" %></td><br>-->
            <!--</tr>-->
            
            <!--<tr>-->
            <!--  <td><%= f.file_field :top_image, class: "mb-3 profile-img" %></td>-->
            <!--</tr>-->
            
            <tr>
              <td>会員ID</td>
              <td><%= @user.id %></td>
            </tr>
            
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :name, class: "rounded" %></td>
            </tr>
    
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :furigana_name, class: "rounded" %></td>
            </tr>
    
            <tr>
              <td>ニックネーム</td>
              <td><%= f.text_field :nick_name, class: "rounded" %></td>
              <td></td>
            </tr>
            
            <tr>
              <td><%= f.label :sex, "性別" %></td>
              <td>
                <%= f.radio_button :sex, "male", id: "sex_male" %> 男性
                <%= f.radio_button :sex, "female", id: "sex_female" %> 女性
              </td>
              <td></td>
            </tr>
    
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, class: "rounded" %></td>
              <td></td>
            </tr>
            
            <tr>
              <td>会員ステータス</td>
              <td>
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, "有効", { value: :true }  %>
                
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, "退会", { value: :false } %>
              </td>
            </tr>
            
            <tr>
              <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>