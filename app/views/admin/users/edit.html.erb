<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @user.name %>さんの会員情報編集</h4>
      <table class="table table-borderless">
        <%= form_with model: [:admin, @user] do |f| %>
        
        <tr>
          <td>プロフィール画像</td><br>
          <td><%= image_tag @user.top_image, size: '100x100', fallback: "no_image.png", class: "mb-3 profile-img" %></td>
          <td><%= f.file_field :top_image, class: "mb-3 profile-img" %></td>
        </tr>
        
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :name %>　<%= f.text_field :first_name %></td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :furigana_name %>　<%= f.text_field :first_name_kana %></td>
        </tr>

        <tr>
          <td>ニックネーム</td>
          <td><%= f.text_field :nick_name %></td>
          <td></td>
        </tr>
        
        <tr>
          <td>性別</td>
          <td><%= f.select :sex, [['Male', 'male'], ['Female', 'female'], ['Other', 'other']], prompt: 'Select Gender' %></td>
          <td></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", { value: :true }  %>
            
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", { value: :false } %>
          </td>
        </tr>
        
        <tr>
          <td>プロフィール文</td>
          <td><%= f.text_field :introduction %></td>
          <td></td>
        </tr>
        
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>