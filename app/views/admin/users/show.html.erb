<div class="container">
  <div class="row">
    <div class="col">
      <div class="d-flex justify-content-center">
        <h2 class="d-inline-block border p-3 my-3">
          <%= @user.name %>さんの会員詳細
        </h2>
      </div>
      <br>
      <div class="d-flex justify-content-center">
        <div class="d-inline-block p-3 my-3">
          <table class="table table-borderless">
            <tr>
              <th>会員ID</td>
              <td><%= @user.id %></td>
            </tr>
            
            <tr>
              <th>ニックネーム</th>
              <td><%= @user.nick_name %></td>
            </tr>
            
            <tr>
              <th>名前</td>
              <td><%= @user.name %></td>
            </tr>
    
            <tr>
              <th>フリガナ</th>
              <td><%= @user.furigana_name %></td>
            </tr>
    
            <tr>
              <th>性別</th>
              <td><%= @user.sex %></td>
            </tr>
            
            <tr>
              <th>メールアドレス</th>
              <td><%= @user.email %></td>
            </tr>
    
            <tr>
              <th>プロフィール文</th>
              <td><%= @user.introduction %></td>
            </tr>
  
            <tr>
              <th>会員ステータス</th>
              <th><%= @user.user_status %></th>
            </tr>
  
            <tr>
              <td></td>
              <td><%= link_to "編集する", edit_admin_user_path, class:"btn btn-success" %></td>
            </tr>
            
          </table>
        </div>
      </div>
    </div>
  </div>
</div>